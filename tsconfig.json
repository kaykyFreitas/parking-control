{
  "compilerOptions": {
    "target": "es2016",                  
    "experimentalDecorators": true,     
    "emitDecoratorMetadata": true,            
    "module": "commonjs",
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@middleware/*": ["middleware/*"]
    },
    "resolveJsonModule": true, 
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,  
    "strict": false,
    "skipLibCheck": true
  }
}
